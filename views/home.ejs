<%- include('partials/header'); -%>

<h1>Home</h1>
<p><%= startingContent %></p>
<% console.log(posts); %> 
<!-- localhost:3000/compose sayfasında kaç tane "post" oluşturursak "Home" sayfasına gönderileri ekler -->
<!-- No matter how many "posts" we create on the localhost:3000/compose page, they will be added to the "Home" page. -->
<% posts.forEach(function(post){ %>
  <h1> <%= post.title   %></h1>
  <!-- Bu kod satırı "post" yaptığımız içeriğin ilk 100 karakterinden fazlasını göstermemeyi sağlar -->
  <!-- This code line ensures that we don't display more than 100 characters of the content we are "posting". -->
  <p>  <%= post.content.substring(0,100) + "..." %>
  <a href="/posts/<%= post.title %>" text-decoration="none">Read More</a>
  </p>
<% }) %>



<%- include('partials/footer'); -%>